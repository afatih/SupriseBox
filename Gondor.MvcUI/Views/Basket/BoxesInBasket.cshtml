@model IEnumerable<DTOs.DTOModels.EntityDTOs.BoxDTO>
@{
    ViewBag.Title = "BoxesInBasket";
    Layout = "~/Views/Shared/Layouts/_LayoutPageOthers.cshtml";
    var selectedBoxes = (Dictionary<int, int>)HttpContext.Current.Session["sepet"];
}


<section class="cart_area">
    @if (Model.Count() != 0)
    {
        <div class="container">
            <div class="cart_inner">
                <div class="table-responsive">
                    <table class="table" id="tbl">
                        <thead>
                            <tr>
                                <th scope="col">Product</th>
                                <th scope="col">Price</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="media">
                                            <div class="d-flex">
                                                <img src="" alt="">
                                            </div>
                                            <div class="media-body">
                                                <p>@item.BoxName</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <h5 id="boxPrice_@item.ID">@item.Price</h5>
                                    </td>
                                    <td>
                                        <div class="product_count">
                                            <input type="text" name="qty" id="amount_@item.ID" maxlength="12" value="1" title="Quantity:" class="input-text qty">
                                            <button onclick="fncIncrease(@item.ID)" class="increase items-count" type="button">
                                                <i class="lnr lnr-chevron-up"></i>
                                            </button>
                                            <button onclick="fncDecrease(@item.ID)" class="reduced items-count" type="button">
                                                <i class="lnr lnr-chevron-down"></i>
                                            </button>
                                        </div>
                                    </td>
                                    <td>
                                        <h5 id="totalBoxPrice_@item.ID">@item.Price</h5>
                                    </td>
                                </tr>
                            }

                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>
                                    <h5 id="subTotal">SubTotal = 0</h5>
                                </td>
                            </tr>

                            <tr class="out_button_area">
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>
                                    <div class="checkout_btn_inner">
                                        <a class="gray_btn" href="#">Continue Shopping</a>
                                        <a class="main_btn" href="#">Proceed to checkout</a>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <h5 style=" text-align: center">Sepetinizde hiç ürün bulunmuyor gibi görünüyor . Neden biraz <a href="/Box/BoxesMainPage">alışveriş </a> yapmıyorsunuz?</h5>
    }

</section>

<script src="~/js/jquery-3.2.1.min.js"></script>

<script>
    function fncIncrease(id)
    {
        var result = document.getElementById('amount_' + id);
        var amount = result.value;
        if (!isNaN(amount)) {
            result.value++
            amount = result.value;
        };
        fncCalculateTotal(amount, id)
        updateSubTotal()
        return false;
    }

    function fncDecrease(id)
    {
        var result = document.getElementById('amount_' + id);
        var amount = result.value;
        if (!isNaN(amount) & amount > 0) {
            result.value--;
            amount = result.value;
        };
        fncCalculateTotal(amount, id)
        updateSubTotal()
        return false;
    }

    function fncCalculateTotal(amount,id)
    {
        var boxPrice = document.getElementById('boxPrice_' + id);
        var boxPriceVal = boxPrice.textContent;
        var totalPrice = parseFloat(amount) * parseFloat(boxPriceVal);

        var totalPricePlace = document.getElementById('totalBoxPrice_' + id);
        totalPricePlace.innerText = totalPrice;
    }

    $(function () {
        var grandTotal = 0;
        $("[id*=totalBoxPrice_]").each(function () {
            grandTotal = grandTotal + parseFloat($(this).html());
            $("[id*=subTotal]").html("SubTotal = " + grandTotal.toString());
        })
    });

    function updateSubTotal() {
        $(function () {
            var grandTotal = 0;
            $("[id*=totalBoxPrice_]").each(function () {
                grandTotal = grandTotal + parseFloat($(this).html());
                $("[id*=subTotal]").html("SubTotal = " + grandTotal.toString());
            })
        });
    }

   



</script>
