@model DTOs.DTOModels.ComplexDTOs.BoxBoxTypeDTO

@{
    ViewBag.Title = "SingleBox";
    Layout = "~/Views/Shared/Layouts/_LayoutPageOthers.cshtml";
}



    <div class="product_image_area">
        <div class="container">
            <div class="row s_product_inner">
                <div class="col-lg-6">
                    <div class="s_product_img">

                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                            <div class="carousel-inner">
                                <div class="carousel-item">
                                    <img  class="d-block w-100" src="~/Content/Images/BoxImages/@Model.ImageUrl" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/Content/Images/BoxImages/@Model.ImageUrl" alt="Second slide">
                                </div>
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="~/Content/Images/BoxImages/@Model.ImageUrl" alt="Third slide">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 offset-lg-1">
                    <div class="s_product_text">
                        @Html.LabelFor(x=>x.BoxName,"kutu deneme")
                        <h3>@Model.BoxName</h3>
                        <h2>@Model.Price TL</h2>
                        <ul class="list">
                            <li><a class="active" href="#"><span>Kutu Tipi</span> : @Model.BoxType</a></li>
                            <li><span> Stok Durumu: @(Model.UnitsInStock > 0 ? "Stokta var" : " Stokta Yok") </span> </li>
                        </ul>
                        <p>@Model.Description</p>
                        <div class="product_count">
                            <label for="qty">Miktar:</label>
                            <input type="number" name="qty" id="sst" maxlength="12" value="1" title="Quantity:" class="input-text qty">
                            <button onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst )) result.value++;return false;" class="increase items-count" type="button"><i class="lnr lnr-chevron-up"></i></button>
                            <button onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst ) &amp;&amp; sst > 0 ) result.value--;return false;" class="reduced items-count" type="button"><i class="lnr lnr-chevron-down"></i></button>
                        </div>
                        <div class="card_area">

                            @Html.ActionLink("Sepete Ekle", "ShoppingCard","Shopping", new { @Model.BoxID }, new { @class = "main_btn" })
                            
                            <a class="icon_btn" href="#"><i class="lnr lnr lnr-diamond"></i></a>
                            <a class="icon_btn" href="#"><i class="lnr lnr lnr-heart"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
