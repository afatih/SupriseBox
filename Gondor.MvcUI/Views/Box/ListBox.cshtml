@model IEnumerable<DTOs.DTOModels.EntityDTOs.BoxDTO>
@{
    Layout = null;
    Layout = "~/Views/Shared/Layouts/_LayoutPageMain.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListBox</title>
</head>
<body>
    <div class="container-fluid"> 
        <table id="tbl" class="table table-bordered table-striped" style="margin-top:150px">
            <thead>
                <tr>
                    <th>Box Name</th>
                    <th>Box Type ID</th>
                    <th>Description</th>
                    <th>Delete</th>
                    <th>Update</th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BoxName</td>
                        <td>@item.BoxTypeID</td>
                        <td>@item.Description</td>
                        <td>
                            <button class="btn btn-link js-delete "  >Sil</button>  
                            <button class="btn btn-link "   >Düzenle</button>  
                        </td>
                    </tr>

                }

            </tbody>
            
           
        </table>
    </div>
</body>
</html>

<script>

    $(document).ready(function () {
        $("#tbl js-delete").on("click", function () {
            confirm("Are you sure you want to delete this box");
        });
    });
</script>








