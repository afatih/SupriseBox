@model DTOs.DTOModels.ComplexDTOs.BoxBoxTypeDTO

@{
    ViewBag.Title = "SingleBox2";
    Layout = "";
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>ListAshop</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/linericon.style.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/css/simpleLightbox.css" rel="stylesheet" />
    <link href="~/Content/css/nice-select.css" rel="stylesheet" />
    <link href="~/Content/css/animate.css" rel="stylesheet" />
    <link href="~/Content/css/jquery-ui.css" rel="stylesheet" />

    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" />
</head>
<body>


    <div class="product_image_area">
        <div class="container">
            <div class="row s_product_inner">
                <div class="col-lg-6">
                    <div class="s_product_img">

                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                            <div class="carousel-inner">
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/Content/Images/BoxImages/@Model.ImageUrl" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="~/Content/Images/BoxImages/@Model.ImageUrl" alt="Second slide">
                                </div>
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="~/Content/Images/BoxImages/@Model.ImageUrl" alt="Third slide">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 offset-lg-1">
                    <div class="s_product_text">
                        @Html.LabelFor(x => x.BoxName, "kutu deneme")
                        <h3>@Model.BoxName</h3>
                        <h2>@Model.Price TL</h2>
                        <ul class="list">
                            <li><a class="active" href="#"><span>Kutu Tipi</span> : @Model.BoxType</a></li>
                            <li><span> Stok Durumu: @(Model.UnitsInStock > 0 ? "Stokta var" : " Stokta Yok") </span> </li>
                        </ul>
                        <p>@Model.Description</p>
                        <div class="product_count">
                            <label for="qty">Miktar:</label>
                            <input type="number" name="qty" id="sst" maxlength="12" value="1" title="Quantity:" class="input-text qty">
                            <button onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst )) result.value++;return false;" class="increase items-count" type="button"><i class="lnr lnr-chevron-up"></i></button>
                            <button onclick="var result = document.getElementById('sst'); var sst = result.value; if( !isNaN( sst ) &amp;&amp; sst > 0 ) result.value--;return false;" class="reduced items-count" type="button"><i class="lnr lnr-chevron-down"></i></button>
                        </div>
                        <div class="card_area">

                            @*@Html.ActionLink("Sepete Ekle", "ShoppingCard","Shopping", new { @Model.BoxID }, new { @class = "main_btn" })*@
                            <button class="main_btn" id="addBasket">Sepete Ekle</button>

                            <a class="icon_btn" href="#"><i class="lnr lnr lnr-diamond"></i></a>
                            <a class="icon_btn" href="#"><i class="lnr lnr lnr-heart"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="~/js/popper.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/stellar.js"></script>
    <script src="~/js/simpleLightbox.min.js"></script>
    <script src="~/js/jquery.nice-select.js"></script>
    <script src="~/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/js/isotope-min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/js/mail-script.js"></script>
    <script src="~/js/jquery-ui.js"></script>
    <script src="~/js/jquery.waypoints.min.js"></script>
    <script src="~/js/jquery.counterup.js"></script>
    <script src="~/js/theme.js"></script>

</body>
</html>


<script>
    $("#addBasket").click(function (e) {
        e.preventDefault();
         var url = "@Url.Action("ShoppingCard", "Shopping")";
        $.get(url, { BoxID: @Model.BoxID}, function (d, s) {
            console.log(d);
            if (d.status == 1) {
                alert(d.box + d.message);
            }
            else if (d.status==2)
            {
                alert(d.message);
            }
           
        })
        return false;
    })
</script>
